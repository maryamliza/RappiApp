<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RappiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#DB3022</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Background Color-->
        <item name="android:windowBackground">@color/lightGray</item>

        <!-- Text Style-->
        <item name="android:textViewStyle">@style/TextViewMetropolisStyle</item>

        <!-- Button Style-->
        <item name="android:buttonStyle">@style/ButtonMetropolisStyle</item>
        <item name="buttonStyle">@style/ButtonMetropolisStyle</item>
        <item name="materialButtonStyle">@style/ButtonMetropolisStyle</item>
        <!-- Text Input Style-->
        <item name="textInputStyle">@style/Theme.RappiApp.TextInputLayoutStyle</item>
    </style>

    <!-- Text Style-->
    <style name="TextViewMetropolisStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>

    <!-- Button Style-->
    <style name="ButtonMetropolisStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/metropolis_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Text Input Style-->
    <style name="Theme.RappiApp.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="materialThemeOverlay">@style/Theme.RappiApp.MaterialThemeOverlay</item>
    </style>

    <style name="Theme.RappiApp.MaterialThemeOverlay">
        <item name="editTextStyle">@style/Theme.RappiApp.TextInputEditTextStyle</item>
    </style>

    <style name="Theme.RappiApp.TextInputEditTextStyle" parent="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:fontFamily">@font/metropolis_regular</item>
    </style>

</resources>